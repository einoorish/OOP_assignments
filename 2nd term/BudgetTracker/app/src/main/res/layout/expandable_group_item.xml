<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expandedListItem"
    android:padding="12dp"
    android:background="@drawable/rectangle_background"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/expandedListItem_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/card_32"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/expandedListItem_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Card"
        app:layout_constraintTop_toTopOf="@id/expandedListItem_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/expandedListItem_icon"
        android:textSize="14sp"
        android:layout_marginLeft="8dp"
        android:paddingLeft="8dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/expandedListItem_balance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1000000 WON"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/expandedListItem_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/expandedListItem_title"
        android:paddingLeft="8dp"
        android:paddingBottom="12dp"
        android:textColor="@android:color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>